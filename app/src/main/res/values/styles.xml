<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PercentChangeTextStyleWidget">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyleWidget">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="StockSymbolTextStyleWidget">
        <item name="android:textSize">19sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="LastUpdateWidget">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TitleWidget">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">#FFF</item>
    </style>
</resources>
